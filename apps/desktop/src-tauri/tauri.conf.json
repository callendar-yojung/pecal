{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pecal",
  "version": "1.2.18",
  "identifier": "com.deskcal.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Pecal",
        "width": 780,
        "height": 660,
        "minWidth": 760,
        "minHeight": 600,
        "x": 100,
        "y": 100,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "active": true,
    "targets": [
      "msi"
    ],
    "createUpdaterArtifacts": false,
    "windows": {
      "wix": {
        "language": "ko-KR",
        "upgradeCode": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
      },
      "nsis": {
        "languages": [
          "Korean",
          "English"
        ],
        "displayLanguageSelector": true,
        "installerHooks": "nsis-hooks.nsh"
      }
    },
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": "-",
      "infoPlist": "Info.plist"
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "deskcal",
          "deskcal-dev"
        ]
      }
    }
  }
}
